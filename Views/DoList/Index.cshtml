@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ToDoList.Models.ViewModels.ListTask

<style>
    body {
    }

    a {
        text-decoration: none;
        color: white;
    }

        a:hover {
            color: black;
        }

    h1 {
        color: #696969;
        margin: 10px;
        display: flex;
    }

    .post {
        border: 1px solid #ccc;
        margin-bottom: 20px;
        padding: 10px;
    }

    .post-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .post-body {
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 10px;
    }

    .post-timestamp {
        padding: 5px;
        font-size: 12px;
        color: #666;
        text-align: right;
    }

    .answer {
        margin-left: 20px;
        padding-left: 10px;
        border-left: 1px solid #ccc;
    }

    .tag {
        display: inline-block;
        color: #333;
        margin: 10px;
        border-radius: 2px;
    }
</style>

<h1>
    <i class="fa-solid fa-quote-left"></i><strong> Lists</strong>
    <form asp-controller="DoList" asp-action="CreateDoList" method="get">
        <button type="submit" class="btn btn-success" style="margin-left:52rem;border-radius:3px"><i class="fa-regular fa-plus"></i> Create List</button>
    </form>
</h1>

@foreach (var doList in Model.DoLists)
{
    <div class="card border-primary mb-2" style="max-width: 70rem;border-radius:2px;background: rgb(166 169 186 / 50%);">
        <h3 class="card-header" style="background-color: #696969"><a asp-controller="DoList" asp-action="AnsPost" asp-route-id="@doList.Id"> <i class="fa-solid fa-bars-staggered"></i> @doList.Title</a></h3>
        <p class="card-body"><i class="fa-solid fa-receipt"></i> @doList.Body</p>
        <p class="post-timestamp">Created on: @doList.TimeStamp.ToString("D") by @Model.AppUsers.FirstOrDefault(u => u.Id == doList.AppUserId).UserName</p>
        <p class="post-timestamp" style="color:red">Deadline : @doList.Deadline.ToString("D")</p>

    </div>
}